[flake8]
max-line-length = 120
extend-ignore = E203, W503
exclude =
    .git,
    __pycache__,
    build,
    dist,
    .eggs,
    *.egg,
    venv,
    .venv,
    env,
    .env,
    docs/conf.py
per-file-ignores =
    __init__.py:F401,F403
    tests/*:E501
max-complexity = 10
count = True
statistics = True
